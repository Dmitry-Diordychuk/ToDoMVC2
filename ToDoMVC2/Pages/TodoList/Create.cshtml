@page
@model ToDoMVC2.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Create Task</h2>
<br />

<div style="border:1px solid #bbb9b9; border-radius:10px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Todo.Description"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Todo.Description" class="form-control"/>
                    </div>
                </div>
            </div>
            <span asp-validation-for="Todo.Description" class="text-danger row-no-gutters"></span>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Todo.StartTime"></label>
                    </div>
                    <div class="col-sm-3">
                        <input asp-for="Todo.StartTime" class="form-control" />
                    </div>
                    <span asp-validation-for="Todo.StartTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Todo.EndTime"></label>
                    </div>
                    <div class="col-sm-3">
                        <input asp-for="Todo.EndTime" class="form-control"/>
                    </div>
                    <span asp-validation-for="Todo.EndTime" class="text-danger"></span>
                </div>
            </div>
            
            
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
                <a asp-page="Index" class="btn btn-success btn-sm">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}